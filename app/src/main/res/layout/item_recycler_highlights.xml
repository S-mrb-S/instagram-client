<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="@dimen/_15sdp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_page_avatar"
        android:layout_width="@dimen/_57sdp"
        android:layout_height="@dimen/_57sdp"
        android:layout_gravity="center"
        android:backgroundTint="?attr/colorSurface"
        app:cardCornerRadius="200dp"
        app:layout_constraintTop_toBottomOf="@id/profile_page_username"
        app:strokeColor="?attr/colorSecondary"
        app:strokeWidth="1.5dp">

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="200dp">

            <ImageView
                android:id="@+id/item_highlight_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_sample" />
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/item_highlight_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="هایلایت شماره 1"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/roboto_light"
        android:textStyle="bold"
        />


</LinearLayout>