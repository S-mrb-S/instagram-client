<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/storyImage"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:gravity="center"
        android:id="@+id/insight_story_recycler_no_view_container"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/storyImage"
        app:layout_constraintEnd_toEndOf="@+id/storyImage"
        app:layout_constraintStart_toStartOf="@+id/storyImage">

        <ImageView
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_7sdp"
            android:src="@drawable/ic_seen"
            app:tint="@color/txt_white" />

        <TextView
            android:id="@+id/insight_story_recycler_no_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="718"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/_9ssp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>